{
    "compilerOptions": {
      "target": "es2017",
      "module": "esnext",
      "jsx": "react-jsx",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "noEmit": true
    },
    "include": ["resources/js/**/*"]
  }
